#define TEMP_PIN A0  

void setup() {
  Serial.begin(9600); 
  Serial.println("Reading temperature values...");
}

void loop() {
 
   float celsius = map(((analogRead(TEMP_PIN) - 20) * 3.04), 0, 1023, -40, 125);

 
  Serial.print("Temperature: ");
  Serial.print(celsius);
  Serial.println(" Â°C");

  delay(200);  // Wait for a second before the next reading
}
